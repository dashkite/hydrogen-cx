@require "../-styles"

:host
  reset block

  &(.no-title) h1
    display none

section
  type copy
  min-width 36rem
  max-width 96rem
  width 100%

  article h1 h2 h3 h4 h5 p ul li blockquote code

  blockquote > *:last-child
    margin-bottom 0

  h1
    type heading very-large
    color black
  h2
    type heading large
    color black

  dashkite link table

  figure
    float right
    borders round
    width 36rem
    padding 1rem
    & > img
      width 100%
      object-fit contain
    & > figcaption
      margin-top 1rem
      borders top
      padding-top 1rem
      type body small
